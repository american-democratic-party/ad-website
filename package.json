{
   "name": "ad-website",
   "version": "1.0.0",
   "description": "ðŸ‡ºðŸ‡¸ American Democratic Party ðŸ‡ºðŸ‡¸",
   "license": "CC0-1.0",
   "type": "module",
   "repository": {
      "type": "git",
      "url": "git+https://github.com/american-democratic-party/ad-website.git"
   },
   "homepage": "https://american-democratic-party.org",
   "bugs": "https://github.com/american-democratic-party/ad-website/issues",
   "docs": "https://github.com/american-democratic-party/ad-website#readme",
   "author": "American Democratic Party (https://american-democratic-party.org)",
   "keywords": [
      "american",
      "democratic",
      "party",
      "political",
      "political-party"
   ],
   "jshintConfig": {
      "esversion": 11,
      "strict": "implied",
      "eqeqeq": true,
      "undef": true,
      "unused": true,
      "varstmt": true,
      "browser": true,
      "node": true,
      "globals": {
         "dna": false
      }
   },
   "replacerConfig": {
      "macros": {
         "article-link-html": "<li><a href={[webRoot]}/article/{{file.folder}}>{{articleTitle}}</a></li>"
      }
   },
   "runScriptsConfig": {
      "clean": [
         "rimraf src/templates/generated build docs"
      ],
      "generated": [
         "copy-file node_modules/web-ignition/dist/utility-box.less --folder src/website/css/static --platform-eol",
         "node tools/details-summary-generator.js src/templates/platform-text src/templates/generated platform",
         "replacer src/website/article --ext=.html --content={{macro:article-link-html}} src/templates/generated --find=[webRoot] --replacement={webRoot} --title-sort --concat=articles.html"
      ],
      "lint": [
         "jshint tools src"
      ],
      "build": [
         "copy-folder src/website                   build --ext=.png,.jpg,.svg,.js",
         "lessc       src/website/style.less        build/style.css",
         "replacer    src/website --ext=.html       build",
         "copy-file   build/article-list/index.html build/article --folder"
      ],
      "publish": [
         "rev-web-assets build                           docs --meta-content-base=https://american-democratic-party.org",
         "replacer --virtual-input . --rename=robots.txt docs --content=#{{space}}Allow{{space}}bots",
         "replacer --virtual-input . --rename=CNAME      docs --content=american-democratic-party.org",
         "copy-file src/website/assets/bookmark-icon.png docs/graphics --folder"
      ],
      "interactive": [
         "chokidar src --command 'run-scripts lint build publish'",
         "browser-sync . --startPath docs --files docs"
      ]
   },
   "scripts": {
      "just-toc": "run-scripts generated --verbose --only=1",
      "pretest": "run-scripts clean generated lint build publish",
      "test": "mocha spec",
      "validate-html": "html-validator --default-rules docs",
      "v": "npm run validate-html",
      "interactive": "npm test && run-scripts interactive --parallel",
      "i": "npm run interactive"
   },
   "dependencies": {
      "@fortawesome/fontawesome-free": "~7.1",
      "assert-deep-strict-equal": "~1.2",
      "browser-sync": "~3.0",
      "chokidar-cli": "~3.0",
      "copy-file-util": "~1.3",
      "copy-folder-util": "~1.2",
      "dna-engine": "~3.3",
      "glob": "~11.0",
      "jshint": "~2.13",
      "less": "~4.4",
      "mocha": "~11.7",
      "recursive-exec": "~1.1",
      "replacer-util": "~1.5",
      "rev-web-assets": "~1.5",
      "rimraf": "~6.1",
      "run-scripts-util": "~1.3",
      "slash": "~5.1",
      "w3c-html-validator": "~2.0",
      "web-ignition": "~2.4"
   }
}
